#################
GenerateFiles

######################
# Validate the input #
######################
ValidateInput

########################
# Check the input file #
########################
if [[ -z ${INPUT_FILE_NAME} ]]; then
  ######################
  # Check Admin Rights #
  ######################
  CheckAdminRights "${ORG_NAME}"
  ###################
  # Get GitHub Data #
  ###################
  echo "------------------------------------------------------"
  echo "Getting repositories for org: ${ORG_NAME}"
  #############################################
  # Check the API limit remaining for GraphQL #
  #############################################
  CheckAPILimit
  #############
  # Get Repos #
  #############
  GetRepos
else
  ############
  # Get Orgs #
  ############
  GetOrgsFromFile
fi

########################
# Report all conflicts #
########################
ReportConflicts

##########
# Footer #
##########
Footer
